<Window x:Class="SnippetManager.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnippetManager"
        mc:Ignorable="d"
        Title="Settings" Height="350" Width="400">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Orientation="Vertical" >
        <!-- Username Field -->
        <TextBlock Text="Username:" Margin="0,5" />
        <TextBox x:Name="UsernameTextBox" Margin="0,5" Width="250" />

        <!-- Old Password Field -->
        <TextBlock Text="Old Password:" Margin="0,5" />
        <PasswordBox x:Name="OldPasswordBox" Margin="0,5" Width="250" />

        <!-- New Password Field -->
        <TextBlock Text="New Password:" Margin="0,5" />
        <PasswordBox x:Name="NewPasswordBox" Margin="0,5" Width="250" />

        <!-- Confirm Password Field -->
        <TextBlock Text="Confirm Password:" Margin="0,5" />
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5" Width="250" />

        <!-- Save Button -->
        <Button Content="Save" Margin="0,10" Width="100" HorizontalAlignment="Center"
                Click="SaveButton_Click" />
    </StackPanel>

</Window>
