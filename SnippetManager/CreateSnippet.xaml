<Window x:Class="SnippetManager.CreateSnippet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Create Snippet" Height="600" Width="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
        <!-- Title -->
<Grid Margin="0,0,0,10">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/> <!-- Label -->
        <ColumnDefinition Width="*"/>   <!-- TextBox -->
    </Grid.ColumnDefinitions>
    <Label Content="Title:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,5,0"/>
    <TextBox x:Name="TitleTextBox" Grid.Column="1" Width="400"/>
</Grid>


            <!-- Languages -->
            <Label Content="Languages:" />
            <ComboBox x:Name="LanguagesComboBox" 
                      Width="400" 
                      Height="30" 
                      Margin="0,0,0,10" 
                      IsEditable="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding}" IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ComboBox}, Path=SelectedItem, Mode=TwoWay}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <!-- Content -->
            <Label Content="Content:" />
            <xctk:RichTextBox x:Name="ContentRichTextBox" 
                              Width="400" 
                              Height="150" 
                              Margin="0,0,0,10" />

            <!-- Tags -->
            <Label Content="Tags:" />
            <ComboBox x:Name="TagsComboBox" Width="400" Height="30" Margin="0,0,0,10" IsEditable="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <!-- Save Button -->
            <Button Content="Save Snippet" Click="SaveButton_Click" 
                    Width="120" 
                    Margin="10,10,0,0" 
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Window>
