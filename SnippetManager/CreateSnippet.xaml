<Window x:Class="SnippetManager.CreateSnippet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Snippet" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Title:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Content:" Margin="0,0,0,5"/>
            <TextBox x:Name="ContentTextBox" Margin="0,0,0,10" Height="100" AcceptsReturn="True"/>
            <Button Content="Save" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>