<UserControl x:Class="SnippetManager.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnippetManager"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <DockPanel>


        <!-- Main Content Area -->
        <Grid>
            <!-- Define Columns and Rows -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Left Panel -->
                <ColumnDefinition Width="*"/>
                <!-- Main Content Area -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Background="#E0E0E0" Margin="5">
                <TextBlock Text="Languages" FontWeight="Bold" Margin="5"/>
                <!-- Area for selecting languages (initially empty) -->
                <ListBox x:Name="LanguagesListBox" Margin="5" Height="100"/>
                <!-- Input textbox for new language -->
                <TextBox x:Name="LanguageInputTextBox" Margin="5" Height="30" Text="Enter new language..."/>
                <Button Content="Add Language" Margin="5" Height="30" Click="AddLanguageButton_Click"/>

                <TextBlock Text="Tags" FontWeight="Bold" Margin="5,10,5,5"/>
                <!-- Area for selecting tags (initially empty) -->
                <ListBox x:Name="TagsListBox" Margin="5" Height="100"/>
                <!-- Input textbox for new tag -->
                <TextBox x:Name="TagInputTextBox" Margin="5" Height="30" Text="Enter new tag..."/>
                <Button Content="Add Tag" Margin="5" Height="30" Click="AddTagButton_Click"/>

                <Button Content="New Snippet" Margin="5,30,5,5" Height="40" Click="NewSnippetButton_Click"/>
                <Button Content="Settings" Margin="5" Height="40"/>
            </StackPanel>

            <!-- Main Content Area -->
            <StackPanel Grid.Column="1" Margin="5">
                <!-- Search Box -->
                <TextBox Width="300" Margin="5" HorizontalAlignment="Left" 
                     VerticalAlignment="Top" Text="Search snippets..."/>

                <!-- Table -->
                <DataGrid AutoGenerateColumns="False" Margin="5" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Width="*" MinWidth="100" MaxWidth="200"/>
                        <DataGridTextColumn Header="Description" Width="2*" MinWidth="100" MaxWidth="600"/>
                        <DataGridTextColumn Header="Tags" Width="*" MinWidth="100" MaxWidth="300"/>
                        <DataGridTextColumn Header="Languages" Width="*" MinWidth="100" MaxWidth="300"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
